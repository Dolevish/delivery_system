%% ===================================================================
%% קובץ קונפיגורציה למערכת ההזמנות
%% ===================================================================

%% מרווח זמן בין יצירת הזמנות (במילישניות)
{generation_interval_ms, 3000}.

%% טווח מיקומים מותר
{min_location, {0, 0}}.
{max_location, {100, 100}}.

%% מספר מקסימלי של הזמנות במקביל
{max_concurrent_orders, 50}.

%% זמן תפוגה להזמנה (במילישניות) - 10 דקות
{order_timeout_ms, 600000}.

%% האם לנסות מחדש הזמנות שנכשלו
{retry_failed_orders, true}.

%% מספר ניסיונות חוזרים מקסימלי
{max_retry_attempts, 3}.

%% מהירות סימולציה (1.0 = רגיל, 2.0 = כפול מהירות)
{simulation_speed, 1.0}.

%% האם להוסיף השהיות אקראיות
{random_delays, true}.

%% הסתברות לכישלון (0.02 = 2%)
{failure_probability, 0.02}.

%% סוגי עסקים ומיקומיהם
{business_types, #{
    restaurant => {25, 25},
    pharmacy => {75, 75},
    grocery => {50, 50},
    electronics => {30, 70},
    clothing => {70, 30},
    bookstore => {40, 60},
    hardware => {60, 40},
    bakery => {35, 35},
    coffee_shop => {45, 55},
    gas_station => {10, 90}
}}.

%% משקלים לבחירת עסקים (חייב להסתכם ל-1.0)
{business_weights, #{
    restaurant => 0.25,      % 25% מההזמנות
    pharmacy => 0.15,        % 15%
    grocery => 0.20,         % 20%
    electronics => 0.05,     % 5%
    clothing => 0.05,        % 5%
    bookstore => 0.05,       % 5%
    hardware => 0.05,        % 5%
    bakery => 0.08,          % 8%
    coffee_shop => 0.10,     % 10%
    gas_station => 0.02      % 2%
}}.

%% התפלגות מיקומי לקוחות
{customer_distribution, #{
    residential => 0.6,      % 60% באזורי מגורים
    commercial => 0.25,      % 25% באזורי מסחר
    industrial => 0.15       % 15% באזורי תעשייה
}}.

%% ===================================================================
%% הגדרות API
%% ===================================================================

%% האם ה-API מופעל
{api_enabled, true}.

%% מגבלת rate (בקשות לדקה)
{api_rate_limit, 100}.

%% טוקנים מורשים ל-API
{api_auth_tokens, [
    <<"test_token_1">>,
    <<"test_token_2">>,
    <<"production_token">>
]}.

%% ===================================================================
%% הגדרות ניטור וסטטיסטיקות
%% ===================================================================

%% כמה זמן לשמור היסטוריה (בימים)
{history_retention_days, 90}.

%% תדירות עדכון סטטיסטיקות (במילישניות)
{stats_update_interval, 5000}.

%% האם לייצא סטטיסטיקות לקובץ
{export_stats_to_file, true}.

%% נתיב קובץ לייצוא סטטיסטיקות
{stats_export_path, "logs/order_stats.csv"}.